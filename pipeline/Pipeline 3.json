{
	"name": "Pipeline 3",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "XmlSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "XmlReadSettings",
							"validationMode": "none",
							"namespaces": true
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['catalog']['book'][0]['author']"
								},
								"sink": {
									"name": "author"
								}
							},
							{
								"source": {
									"path": "$['catalog']['book'][0]['title']"
								},
								"sink": {
									"name": "title"
								}
							},
							{
								"source": {
									"path": "$['catalog']['book'][0]['genre']"
								},
								"sink": {
									"name": "genre"
								}
							},
							{
								"source": {
									"path": "$['catalog']['book'][0]['price']"
								},
								"sink": {
									"name": "price",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['catalog']['book'][0]['publish_date']"
								},
								"sink": {
									"name": "publish_date"
								}
							},
							{
								"source": {
									"path": "$['catalog']['book'][0]['description']"
								},
								"sink": {
									"name": "description"
								}
							},
							{
								"source": {
									"path": "$['catalog']['book'][0]['@id']"
								},
								"sink": {
									"name": "@@id"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "Xml1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "test_file_csv",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}