					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"transformed_df = spark.sql(\"\"\"{0}\"\"\".format(logic_string))\r\n",
					"transformed_df.show()"
				],
				"execution_count": 21
